*,
*::before,
*::after
	box-shadow inherit

*:focus
	outline 1px dotted #212121
	outline 5px auto -webkit-focus-ring-color

html, body
	box-sizing border-box
	overflow-x hidden
	font-family "Helvetica", sans-serif
	font-size 16px

.container
	width 100%
	margin 0 auto
	max-width 960px
	padding-right 10px
	padding-left 10px

.stripes
	position relative
	&:before, &:after
		position absolute
		width 1000px
		height 60px
		background #F2AE9C
		content ''
		z-index 100
		top 0
	&:before
		right 100%
		margin-right 10px
	&:after
		left 100%
		margin-left 10px
	&_full
		&:before, &:after
			height auto
			bottom 0

.title
	margin 25px 0
	background-image url('../images/title-line.png')
	background-repeat repeat-x
	height 19px
	&__text
		bebas-font()
		word-spacing 2px
		vertical-align top
		display inline-block
		font-size 18px
		color #E8663C
		background #FFF
		margin 0
		padding 0 20px 0 0
		line-height 19px